---
import { Icon } from "astro-iconify";
import Logo from "~/components/atoms/Logo.astro";
import ToggleTheme from "../core/ToggleTheme.astro";
import ToggleMenu from "../core/ToggleMenu.astro";

import { SITE } from "~/config.mjs";
import { getI18nPermalink, getLink } from "~/utils/content";

const { i18nLinks } = Astro.props;
const { locale: currentLocale } = Astro.params;

const otherI18nLinks = i18nLinks && Object.fromEntries(Object.entries(i18nLinks).filter(([locale]) => locale !== currentLocale))

const otherLocale = SITE.locales.filter(
  (lang) => lang !== currentLocale
)[0]

const localeSwitcher = getI18nPermalink(otherI18nLinks, otherLocale)
---

<header
  class="sticky top-0 z-40 flex-none mx-auto w-full bg-white md:bg-white/90 dark:bg-slate-900 dark:md:bg-slate-900/90 md:backdrop-blur-sm border-b dark:border-b-0"
>
  <div
    class="py-3 px-3 mx-auto w-full md:flex md:justify-between max-w-6xl md:px-4"
  >
    <div class="flex justify-between">
      <a
        class="flex items-center"
        href={getLink('index', currentLocale)}
      >
        <Logo />
      </a>
      <div class="flex items-center md:hidden">
        <ToggleTheme />
        <ToggleMenu />
      </div>
    </div>
    <nav
      class="items-center w-full md:w-auto hidden md:flex text-gray-600 dark:text-slate-200 h-screen md:h-auto"
      aria-label="Main navigation"
      id="menu"
    >
      <ul
        class="flex flex-col pt-8 md:pt-0 md:flex-row md:self-center collapse w-full md:w-auto collapsed text-xl md:text-base"
      >
      <li>
        <a
          class="font-medium hover:text-gray-900 dark:hover:text-white px-4 py-3 flex items-center transition duration-150 ease-in-out"
          href={getLink("team", currentLocale)}
          >Team
        </a>
      </li>
        <li>
          <a
            class="font-medium hover:text-gray-900 dark:hover:text-white px-4 py-3 flex items-center transition duration-150 ease-in-out"
            href={getLink("blog", currentLocale)}
            >Blog
          </a>
        </li>
        <li class="md:hidden">
          <a
            class="font-bold hover:text-gray-900 dark:hover:text-white px-4 py-3 flex items-center transition duration-150 ease-in-out"
            href="https://github.com/ecamp/ecamp3"
            >Github
          </a>
        </li>
      </ul>
      <div class="md:self-center flex items-center mb-4 md:mb-0 ml-2">
        <div class="hidden items-center md:flex">
          <a
            href={getLink("contact", currentLocale)}
            class="text-gray-500 dark:text-gray-400 hover:bg-gray-100 dark:hover:bg-gray-700 focus:outline-none focus:ring-4 focus:ring-gray-200 dark:focus:ring-gray-700 rounded-lg text-sm p-2.5 inline-flex items-center"
            aria-label="Email"
          >
            <Icon name="tabler:mail" class="w-5 h-5" />
          </a>
          <a
            href="https://github.com/ecamp/ecamp3"
            class="inline-block text-gray-500 dark:text-gray-400 hover:bg-gray-100 dark:hover:bg-gray-700 focus:outline-none focus:ring-4 focus:ring-gray-200 dark:focus:ring-gray-700 rounded-lg text-sm p-2.5"
            aria-label="eCamp Github"
          >
            <Icon name="tabler:brand-github" class="w-5 h-5" />
          </a>
          <a
            class="text-gray-500 dark:text-gray-400 hover:bg-gray-100 dark:hover:bg-gray-700 focus:outline-none focus:ring-4 focus:ring-gray-200 dark:focus:ring-gray-700 rounded-lg text-base p-2.5 inline-flex items-center"
            href={localeSwitcher}
          >
            {otherLocale.toUpperCase()}
          </a>
        </div>
      </div>
    </nav>
  </div>
</header>
