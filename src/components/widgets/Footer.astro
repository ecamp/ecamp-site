---
import { Icon } from "astro-iconify";
import { url } from "~/i18n";

const footer = {
  coc: {
    de: "Verhaltenskodex",
    en: "Code of conduct",
  },
  tos: {
    de: "Nutzungsbedingungen und Datenschutzerklärung",
    en: "Terms of service and privacy policy",
  },
};

const poweredbynetlify = {
  de: "Diese Website läuft auf Netlify",
  en: "This site is powered by Netlify"
}

const socials = [
  // { label: "Twitter", icon: "tabler:brand-twitter", link: "#" },
  // { label: "Facebook", icon: "tabler:brand-facebook", link: "#" },
  // { label: "Instagram", icon: "tabler:brand-instagram", link: "#" },
  { label: "RSS", icon: "tabler:rss", link: "/rss.xml" },
  { label: "Github", icon: "tabler:brand-github", link: "https://github.com/ecamp" },
];
---

<footer>
  <div class="max-w-6xl mx-auto px-4 sm:px-6">
    <div
      class="grid grid-cols-12 gap-4 gap-y-8 sm:gap-8 py-8 md:py-12 border-t border-gray-200 dark:border-slate-800"
    >
      <div class="col-span-12">
        <div class="mb-2">
          <a class="inline-block font-bold text-xl" href="/">eCamp</a>
        </div>
        <div class="text-sm text-gray-600 dark:text-gray-400">
          {
            Object.entries(footer)
              .map(([id, i18n]) => (
                <a
                  class="text-gray-600 hover:text-gray-700 dark:text-gray-400 hover:underline transition duration-150 ease-in-out"
                  href={url(id, Astro.params.locale)}
                >
                  {i18n[Astro.params.locale]}
                </a>
              ))
              .reduce((accu, elem) => {
                return accu === null ? [elem] : [...accu, " · ", elem];
              }, null)
          }
          &middot; <a class="text-gray-600 hover:text-gray-700 dark:text-gray-400 hover:underline transition duration-150 ease-in-out" href="https://status.ecamp3.ch/" target="_blank">Status</a>
        </div>
      </div>
    </div>
    <div class="md:flex md:items-center md:justify-between py-6 md:py-8">
      <ul class="flex mb-4 md:order-1 -ml-2 md:ml-4 md:mb-0">
        {
          socials.map(({ icon, link, label }) => (
            <li>
              <a
                class="text-gray-500 dark:text-gray-400 hover:bg-gray-100 dark:hover:bg-gray-700 focus:outline-none focus:ring-4 focus:ring-gray-200 dark:focus:ring-gray-700 rounded-lg text-sm p-2.5 inline-flex items-center"
                aria-label={label}
                href={link}
              >
                <Icon name={icon} class="w-5 h-5" />
              </a>
            </li>
          ))
        }
      </ul>
      <div class="text-sm text-gray-600 mr-4 dark:text-slate-400">
        Originaly made by <a
          href="https://onwidget.com/"
        >
          onWidget</a> · <a class="text-teal-700 hover:underline dark:text-gray-200" href="https://www.netlify.com/">{poweredbynetlify[Astro.params.locale]}</a>
      </div>
    </div>
  </div>
</footer>
